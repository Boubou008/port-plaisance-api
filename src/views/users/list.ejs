<% layout('layout') -%>
<h2>Utilisateurs</h2>
<p><a class="btn" href="/users/new">Créer un utilisateur</a></p>
<table>
  <thead><tr><th>Nom</th><th>Email</th><th>Créé le</th><th></th></tr></thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td><%= new Date(u.createdAt).toLocaleDateString('fr-FR') %></td>
        <td><a class="btn" href="/users/<%= u._id %>">Détails</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
